<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?scenebuilder-stylesheet vista.css?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <center>
      <AnchorPane fx:id="vistaHolder" prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Fitxer">
            <items>
              <MenuItem fx:id="sortirMenuItem" mnemonicParsing="false" onAction="#sortirAction" text="Sortir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Jugar">
            <items>
              <MenuItem fx:id="jugarMenuItem" mnemonicParsing="false" onAction="#jugarAction" text="Jugar" />
              <MenuItem fx:id="configurarMenuItem" mnemonicParsing="false" onAction="#configurarAction" text="Configurar" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem fx:id="quantAMenuItem" mnemonicParsing="false" onAction="#quantAAction" text="Quant a" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
