<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?scenebuilder-stylesheet vista.css?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainController">
   <center>
      <AnchorPane fx:id="vistaHolder" prefHeight="300.0" prefWidth="500.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Fitxer">
            <items>
              <MenuItem fx:id="sortirMenuItem" mnemonicParsing="false" text="Sortir" onAction="#sortirAction" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Editar">
            <items>
              <MenuItem fx:id="jugarMenuItem" mnemonicParsing="false" text="Jugar" onAction="#jugarAction" />
              <MenuItem fx:id="configurarMenuItem" mnemonicParsing="false" text="Configurar" onAction="#configurarAction" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem fx:id="quantAMenuItem" mnemonicParsing="false" text="Quant a" onAction="#quantAAction" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
